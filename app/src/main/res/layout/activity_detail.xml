<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:background="@color/biru"
    android:orientation="horizontal"
    tools:context=".DetailActivity">

    <ImageView
        android:id="@+id/imgDetailPakaian"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/bajukemeja" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">



        <TextView
            android:id="@+id/tvNamaDetailPakaian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Baju Muslim"
            android:textSize="30sp"
            android:textStyle="bold"
            android:fontFamily="@font/alwaysforever"/>

        <TextView
            android:id="@+id/tvHargaDetailPakaian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvNamaDetailPakaian"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="RP : 20.000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvStokDetailPakaian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvHargaDetailPakaian"
            android:layout_alignParentRight="true"
            android:text="Stok 8/10"
            android:textSize="20sp" />



    </RelativeLayout>

</LinearLayout>